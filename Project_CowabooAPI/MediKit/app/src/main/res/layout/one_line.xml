<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgRespiratoires"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_disease"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/img_icon"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/type_respiratoire" />

    <ImageView
        android:id="@+id/imgCoeur"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/type_coeur"
        android:layout_below="@+id/tv_disease"
        android:layout_toEndOf="@+id/imgRespiratoires" />

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        app:srcCompat="@drawable/man" />

    <TextView
        android:id="@+id/tv_disease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imgIntestinales"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/type_intestinales"
        android:layout_below="@+id/tv_disease"
        android:layout_toEndOf="@+id/imgDermatologiques" />

    <ImageView
        android:id="@+id/imgDermatologiques"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/type_dermatologique"
        android:layout_below="@+id/tv_disease"
        android:layout_toEndOf="@+id/imgCoeur" />

    <ImageView
        android:id="@+id/imgMusculaires"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/type_musculaires"
        android:layout_below="@+id/tv_disease"
        android:layout_toEndOf="@+id/imgIntestinales" />

    <ImageView
        android:id="@+id/imgCerveau"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_disease"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/imgMusculaires"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/type_cerveau" />

</RelativeLayout>