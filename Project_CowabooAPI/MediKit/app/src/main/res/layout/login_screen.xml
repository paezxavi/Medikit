<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <ImageView
        android:id="@+id/img_header_login_screen"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/header_login_screen" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="201dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/editText2"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="27dp"
        android:background="@drawable/custom_textview_login"
        android:ems="10"
        android:hint="Secret Key"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editText2"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="201dp"
        android:layout_height="45dp"
        android:layout_below="@+id/img_header_login_screen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:background="@drawable/custom_textview_login"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#444"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/footer_login_screen" />

    <Button
        android:id="@+id/button"
        android:layout_width="167dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginTop="49dp"
        android:background="@drawable/custom_button_login"
        android:elevation="0dp"
        android:text="Connexion"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#fafafa"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="37dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_lock_grey600_36dp"
        android:layout_below="@+id/editText2"
        android:layout_toStartOf="@+id/editText" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/imageView11"
        android:layout_alignStart="@+id/imageView11"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/lock" />

</RelativeLayout>